<idea-plugin>
<id>org.intellij.sdk.MobTime</id>
    <name>MobTime</name>
    <vendor>jstruk+friends@Vehikl</vendor>

    <description>
        <![CDATA[
      Plugin for IntelliJ-based IDEs that allows the use of Mobti.me directly inside the IDE
      for structuring mob programming.
    ]]>
    </description>
    <change-notes>
        <![CDATA[
      <ul>
        <li><b>2.0.1</b> Update Icon</li>
        <li><b>1.0.0</b> Release 1.0.0 </li>
      </ul>
    ]]>
    </change-notes>

    <!-- Text to display as company information on Preferences/Settings | Plugin page -->
    <vendor url="https://mobti.me/">Mobtime</vendor>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="MobTime" secondary="true" icon="AllIcons.General.Modified" anchor="right"
                    factoryClass="org.intellij.sdk.mobtimeviewer.MobTimeToolWindowFactory"/>
    </extensions>
</idea-plugin>